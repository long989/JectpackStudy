<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kachexiongdi.qkljetpackmvvm">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QklJetpackMVVM">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Step1Activity" />
        <activity android:name=".activity.Step2Activity" />
        <activity android:name=".activity.Step3Activity" />
        <activity android:name=".activity.Step4Activity" />
        <activity android:name=".activity.Step5Activity" />
        <activity android:name=".activity.Step6Activity" />
        <activity android:name=".activity.Step7Activity" />
        <activity android:name=".activity.Step8Activity" />
        <activity android:name=".activity.Step9Activity" />

        <service android:name=".location.MyLocationService" />
    </application>

</manifest>